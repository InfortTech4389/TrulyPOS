    /**
     * Payment success notification
     */
    private function send_payment_success($data)
    {
        $this->CI->email->clear();
        $this->CI->email->from($this->CI->config->item('from_email'), $this->CI->config->item('from_name'));
        $this->CI->email->to($data['email']);
